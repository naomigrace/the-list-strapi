{
  "kind": "collectionType",
  "collectionName": "actions",
  "info": {
    "name": "Action",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "location": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "uid"
    },
    "categories": {
      "collection": "categories",
      "via": "actions",
      "dominant": true
    },
    "completed": {
      "type": "boolean",
      "default": false
    },
    "neighborhood": {
      "via": "actions",
      "model": "neighborhoods"
    }
  }
}
